<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.selfmade4u.de.decentralized_storage">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DecentralizedStorage">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.DecentralizedStorage.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:authorities="de.selfmade4u.decentralized_storage.provider"
            android:name=".provider.DecentralizedContentProvider"
            android:readPermission="de.selfmade4u.decentralized_storage.provider.READ_PROVIDER"
            android:writePermission="de.selfmade4u.decentralized_storage.provider.WRITE_PROVIDER"
            android:enabled="true"
            android:exported="true"
            android:syncable="true"
            android:icon="@drawable/ic_launcher_foreground"
            android:label="Decentralized Storage Provider"
            >

        </provider>
    </application>

</manifest>