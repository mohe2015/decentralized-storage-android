<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.selfmade4u.decentralized_storage">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DecentralizedStorage"
        android:allowBackup="true"
        android:fullBackupContent="true">
        <activity
            android:name="de.selfmade4u.decentralized_storage.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.DecentralizedStorage.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:name="de.selfmade4u.decentralized_storage.provider.DecentralizedContentProvider"
            android:authorities="de.selfmade4u.decentralized_storage"
            android:exported="true"
            android:grantUriPermissions="true"
            android:permission="android.permission.MANAGE_DOCUMENTS"
            android:enabled="true"
            android:icon="@drawable/ic_launcher_foreground"
            android:label="Decentralized Storage Provider"
            >
            <intent-filter>
                <action android:name="android.content.action.DOCUMENTS_PROVIDER" />
            </intent-filter>
        </provider>
    </application>

</manifest>